        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0f4f8; /* Fond plus clair, similaire à Bohr */
        }
        .font-Roboto {
            font-family: 'Roboto', sans-serif;
        }

        /* --- STYLES DU JEU LEWIS --- */
        .dot {
            position: absolute;
            width: 12px;
            height: 12px;
            background-color: #FBBF24; /* Amber-400 */
            border-radius: 50%;
            box-shadow: 0 0 8px #F59E0B; /* Amber-500 */
        }
        .final-grid-dot {
            position: absolute;
            width: 6px;
            height: 6px;
            background-color: #1F2937;
            border-radius: 50%;
        }
        #drawing-area {
            background-color: #f9fafb; /* Fond clair pour la zone de dessin */
            border-color: #d1d5db; /* Bordure grise */
        }
        #element-symbol {
            color: #111827; /* Symbole sombre */
        }

        /* --- STYLES DU TABLEAU PÉRIODIQUE (importés de Bohr) --- */
        #periodic-table-container {
            display: grid;
            grid-template-columns: repeat(18, minmax(0, 1fr));
            gap: 2px;
            width: 100%;
            max-width: 600px; /* Limite la largeur du tableau */
            margin: 0 auto; /* Centre le tableau */
        }
        .pt-header {
            font-size: 10px;
            font-weight: bold;
            text-align: center;
            color: #4b5563;
        }
        .pt-cell {
            aspect-ratio: 1 / 1;
            border: 1px solid #e5e7eb;
            background-color: #f9fafb;
            border-radius: 4px;
            position: relative;
            font-family: monospace;
            font-size: clamp(6px, 1.5vw, 10px);
        }
        .pt-cell.active {
            /* Style pour l'élément sélectionné */
            background-color: #e0f2fe;
            border: 2px solid #7dd3fc;
            display: flex;
            flex-direction: column;
            padding: 2px;
            transform: scale(1.05);
            box-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
            z-index: 10;
        }
        .pt-atomic-number { font-weight: bold; }
        .pt-symbol { font-size: 1.5em; font-weight: 800; text-align: center; margin: auto 0; }
        .pt-name { text-align: center; font-size: 0.8em; line-height: 1; }
    </style>
