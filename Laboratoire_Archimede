    <title>Simulateur de Masse Volumique et Flottaison</title>
    <style>
        /* Styles généraux */
        body {
            font-family: 'Inter', Arial, sans-serif;
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: #f0f8ff;
            color: #333;
        }
        .container {
            background-color: #ffffff;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            display: flex;
            flex-direction: column;
            gap: 20px;
        }
        h1, h2 {
            text-align: center;
            color: #005a9c;
        }

        /* Disposition principale */
        .main-layout {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            align-items: flex-start;
        }
        .controls-panel {
            flex: 1;
            min-width: 320px;
            display: flex;
            flex-direction: column;
            gap: 20px;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
            border: 1px solid #e9ecef;
        }
        .visualization-area {
            flex: 2;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
        }

        /* Styles des contrôles */
        .input-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        .input-group-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        label {
            font-weight: bold;
            color: #4a6572;
        }
        input[type="range"] {
            width: 100%;
            height: 8px;
            -webkit-appearance: none;
            background: #e0e0e0;
            border-radius: 5px;
            outline: none;
        }
        input[type="range"]::-webkit-slider-thumb {
            -webkit-appearance: none;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background: #007bff;
            cursor: pointer;
        }

        /* Zone de visualisation */
        #simulationCanvas {
            background-color: #ffffff;
            border: 2px solid #b0c4de;
            border-radius: 8px;
            width: 100%;
            height: auto;
            cursor: grab;
        }
        #simulationCanvas.grabbing {
            cursor: grabbing;
        }
        
        /* Grille d'information sous les paramètres */
        .info-display-columns {
            display: flex;
            gap: 10px;
            width: 100%;
            margin-top: 20px;
        }
        .info-column {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        .info-box {
            background-color: #e9ecef;
            padding: 10px;
            border-radius: 6px;
            font-size: 0.9em;
            font-weight: bold;
            text-align: center;
        }
        .info-box span {
            display: block;
            font-size: 1.2em;
            margin-top: 5px;
        }
        .apparent-weight.up { color: #28a745; }
        .apparent-weight.down { color: #dc3545; }

        /* Tableau de données */
        .data-table {
            margin-top: 20px;
        }
        .data-controls {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 15px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }
        th {
            background-color: #e9ecef;
        }
        
        /* Boutons */
        button {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #0056b3;
        }
